<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="me.mcx.blog.mapper.BlogUserInfoMapper">
    
    <resultMap type="BlogUserInfo" id="BlogUserInfoResult">
        <result property="id"    column="id"    />
        <result property="email"    column="email"    />
        <result property="nickname"    column="nickname"    />
        <result property="avatar"    column="avatar"    />
        <result property="intro"    column="intro"    />
        <result property="webSite"    column="web_site"    />
        <result property="isDisable"    column="is_disable"    />
        <result property="bjCover"    column="bj_cover"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectBlogUserInfoVo">
        select id, email, nickname, avatar, intro, web_site, is_disable, bj_cover, create_by, create_time, update_by, update_time, remark from blog_user_info
    </sql>

    <select id="selectBlogUserInfoList" parameterType="BlogUserInfo" resultMap="BlogUserInfoResult">
        <include refid="selectBlogUserInfoVo"/>
        <where>  
            <if test="email != null  and email != ''"> and email = #{email}</if>
            <if test="nickname != null  and nickname != ''"> and nickname like concat('%', #{nickname}, '%')</if>
            <if test="avatar != null  and avatar != ''"> and avatar = #{avatar}</if>
            <if test="intro != null  and intro != ''"> and intro = #{intro}</if>
            <if test="webSite != null  and webSite != ''"> and web_site = #{webSite}</if>
            <if test="isDisable != null "> and is_disable = #{isDisable}</if>
            <if test="bjCover != null  and bjCover != ''"> and bj_cover = #{bjCover}</if>
        </where>
    </select>
    
    <select id="selectBlogUserInfoById" parameterType="Long" resultMap="BlogUserInfoResult">
        <include refid="selectBlogUserInfoVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertBlogUserInfo" parameterType="BlogUserInfo" useGeneratedKeys="true" keyProperty="id">
        insert into blog_user_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="email != null">email,</if>
            <if test="nickname != null and nickname != ''">nickname,</if>
            <if test="avatar != null and avatar != ''">avatar,</if>
            <if test="intro != null">intro,</if>
            <if test="webSite != null">web_site,</if>
            <if test="isDisable != null">is_disable,</if>
            <if test="bjCover != null">bj_cover,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="email != null">#{email},</if>
            <if test="nickname != null and nickname != ''">#{nickname},</if>
            <if test="avatar != null and avatar != ''">#{avatar},</if>
            <if test="intro != null">#{intro},</if>
            <if test="webSite != null">#{webSite},</if>
            <if test="isDisable != null">#{isDisable},</if>
            <if test="bjCover != null">#{bjCover},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateBlogUserInfo" parameterType="BlogUserInfo">
        update blog_user_info
        <trim prefix="SET" suffixOverrides=",">
            <if test="email != null">email = #{email},</if>
            <if test="nickname != null and nickname != ''">nickname = #{nickname},</if>
            <if test="avatar != null and avatar != ''">avatar = #{avatar},</if>
            <if test="intro != null">intro = #{intro},</if>
            <if test="webSite != null">web_site = #{webSite},</if>
            <if test="isDisable != null">is_disable = #{isDisable},</if>
            <if test="bjCover != null">bj_cover = #{bjCover},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBlogUserInfoById" parameterType="Long">
        delete from blog_user_info where id = #{id}
    </delete>

    <delete id="deleteBlogUserInfoByIds" parameterType="String">
        delete from blog_user_info where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>